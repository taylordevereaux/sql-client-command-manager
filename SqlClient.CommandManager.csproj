<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>SqlClient.CommandManager</PackageId>
    <Version>1.0.1</Version>
    <Authors>Taylor Devereaux</Authors>
    <Description>Provides a helper class for easy ADO.Net queries and data reader tasks. As well, includes extension methods to easily read data for specific column names.</Description>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <RepositoryUrl>https://github.com/taylordevereaux/sql-client-command-manager</RepositoryUrl>
    <PackageTags>SQL,C#,SqlClient,ADO.Net,SqlDataReader,aspnetcore,SqlServer,Database</PackageTags>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <UserSecretsId>92481fed-bf3e-4abf-96b8-caf00d0c1e20</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.8.6" />
  </ItemGroup>

  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)"/>
  </ItemGroup>

  <PropertyGroup>
    <DefaultItemExcludes>Tests\**</DefaultItemExcludes>
  </PropertyGroup>

</Project>
